page{
  background: white;
  font-size: 15px;
}
.new-mobile{
  margin: 146rpx 40rpx 0;
  display: flex;
  height: 100rpx;
  align-items:center;
  border-bottom: 1rpx solid #E2E2E2;
}
.new-code{
  margin: 0 40rpx;
  display: flex;
  height: 100rpx;
  align-items:center;
  border-bottom: 1rpx solid #E2E2E2;
}
.title{
  min-width: 180rpx;
  float: left;
}
.code{
  float: right;
  width: 180rpx;
  height: 60rpx;
  background: #1B1B1B;
  color: white;
  text-align: center;
  line-height: 60rpx;
}
.confirm{
  margin: 120rpx 40rpx 0;
  background: #1B1B1B;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: white;
}
.input-number{
  max-width: 300rpx;
  float: left;
}