/* 遮罩层 */
.screen-box{
  width: 100%;
  border-top: 1rpx solid #DDDDDD;
}
.screen-content{
  width: 100%;
  margin-bottom:130rpx;
}
.border{
  border: 3rpx solid #1B1B1B !important;
}
.screen-title{
  padding: 30rpx;
  font-family: 'PingFang-SC-Medium';
  color: #333333;
  font-size: 15px;
  display: flex;
  justify-content: space-between;
}
.screen-condition{
  padding: 0 30rpx;
  margin-right: -1.2%;
  overflow: hidden;
  /* min-height: 170rpx; */
  font-family: 'PingFang-SC-Regular';
  font-size: 14px;
  color: #333333;
}
.screen-condition view{
  width: 32.1%;
  box-sizing: border-box;
  height: 70rpx;
  margin-right: 1.2%;
  text-align: center;
  line-height: 70rpx;
  border: 1rpx solid #CCCCCC;
  float: left;
  margin-bottom: 1.2%;
  position: relative;
}
.screen-price{
  display: flex;
  padding:0 30rpx;
  justify-content: space-between;
}
.screen-price input{
  float: left;
  border: 1px solid #CCCCCC;
  font-size: 14px;
  font-family: 'PingFang-SC-Regular';
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.link{
  display: inline-block;
  width: 20rpx;
  margin: 35rpx 10rpx;
  border-bottom: 2px solid black;
}
.screen-btn{
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  display: flex;
  font-family: 'PingFang-SC-Medium';
  font-size: 15px;
  justify-content: space-around;
  align-items: center;
  box-shadow:0px -8px 13px 0px rgba(51,51,51,0.06);
  position: fixed;
  bottom: 0;
}
.screen-btn view{
  border: 1px solid #1B1B1B;
  height: 80rpx;
  width: 40%;
  text-align: center;
  line-height: 80rpx;
}
.confirm{
  background: #1B1B1B;
  color: #FFFFFF;
}
.triangle{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 0px;
  height: 0px;
  border-width: 4px;
  border-style: solid;
  border-color: transparent #1B1B1B #1B1B1B transparent;
}