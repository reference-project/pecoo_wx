<view class='eidtView'>
  <view class="uesrDiv">
    <span>原密码</span>
    <input type="password" bindinput='oldInput' placeholder="请输入您的原密码" class="phone" id="originalPassword"/>
  </view>
  <view class="uesrDiv">
    <span>新密码</span>
    <input type="password" bindinput='newInput1' placeholder="请输入您的新密码" class="phone" id="newPassword"/>
  </view>
  <view class="uesrDiv">
    <span>确认密码</span>
    <input type="password" bindinput='newInput2' placeholder="请确认密码" class="phone" id="newPasswordAgain"/>
  </view>
  <view class="submitOrder" bindtap='changePassword'>确认</view>
</view>
