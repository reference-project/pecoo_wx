page{
	background: #F3F3F3;
  font-family: 'MicrosoftYaHei'
}
.address{
  padding: 10px 0;
  display: flex;
  background: #FFFFFF;
  font-size: 14px;
  color: #666666;
}
.address-pic{
  width: 37rpx;
  height: 44rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  float: left;
}
.pro-order-info{
  height: 240rpx;
  margin-top: 20rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
}
.pic-box{
  width: 180rpx;
  margin-left: 30rpx;
  height: 180rpx;
}
.pic-box image{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.pro-content{
  flex: 1;
  padding: 0 30rpx;
}
.pro-name{
  font-size: 15px;
}
.freight{
  height: 96rpx;
  line-height: 96rpx;
  background: #FFFFFF;
}
.freight view{
  border-top: 1rpx solid #E2E2E2;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}

.order-info{
  height: 176rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
  font-size: 14px;
  color: #999999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}
.order-info view{
  padding: 5rpx 0rpx;
}
.time{
  width: 100%;
  background: #D74A42;
  color: #FFFFFF;
  text-align: center;
  font-size: 14px;
  height: 60rpx;
  line-height: 60rpx;
  position: fixed;
  bottom: 96rpx;
}
/* 底部 */
.total-price{
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  font-size: 14px;
}
.order-btn{
  flex: 1;
  padding-right: 30rpx;
}
.order-btn view{
  float: right;
  border-radius: 10px;
  text-align: center;
}
.btn1{
  width: 178rpx;
  height: 74rpx;
  border: 1rpx solid #CCCCCC;
  color: #CCCCCC;
  line-height: 74rpx;
}
.btn2{
  margin-left: 20rpx;
  width: 210rpx;
  height: 76rpx;
  background: #1A191E;
  color: #FFFFFF;
  line-height: 76rpx;
}