page{
  background: #F6F8FA;
}
.share-order{
  width: 100%;
  background: #FFFFFF;
  height: 310rpx;
  margin-top: 20rpx;
}
.contact{
  height: 69rpx;
  line-height: 69rpx;
  border-bottom: 1rpx solid #EEEEEE;
  font-family: 'PingFang-SC-Medium';
  font-size: 12px;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}
.order-detail{
  padding-right: 30rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
}
.pic-box{
  margin: 0 30rpx;
  width: 170rpx;
  height: 170rpx;
}
.pic-box image{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.content{
  flex: 1;
  padding: 30rpx 0;
}
.order-name{
  font-size: 14px;
  font-family: 'Arial';
  color: #333333;
  margin-bottom: 30rpx;
  max-width: 500rpx;
  height: 70rpx;
}
.public{
  font-family: 'PingFang SC';
  font-size: 12px;
  color: #999999;
}
.money{
  color: #333333;
}