page{
  background: #F6F8FA;
}
.not-address{
  height: 160rpx;
  line-height: 160rpx;
  font-size: 14px;
  background: #FFFFFF;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.add-address{
  max-width: 44rpx;
  max-height: 44rpx;
  margin-right: 20rpx;
}
.address{
  border-top: 1rpx solid #E2E2E2;
  height: 160rpx;
}
.card{
  border-top: 1rpx solid #E2E2E2;
  height: 100rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
  font-size: 15px;
  position: relative;
}
.order-bg{
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 3rpx;
  background:url(https://static.pecoo.com/images/common/order_bg.png) repeat left bottom;
}
.card input{
  min-width:400rpx;
}
.pro-detail{
  margin-top: 20rpx;
}
.computed{
  margin-top: 20rpx;
  background: #FFFFFF;
  font-size: 14px;
}
.shop-num{
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.handle>input{
  box-sizing:border-box;
  width: 100rpx;
  height: 52rpx;
  text-align: center;
  font-size: 12px;
  float: left;
  border:1rpx solid #757575;
}
.handle view{
  float: left;
  box-sizing:border-box;
  width: 52rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  border: 1rpx solid #757575;
}
.add{
  border-left: none !important;
}
.borders{
  border-color: #DDDDDD !important;
}
.today{
  display: flex;
  padding: 0 30rpx 20rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #E2E2E2;
}
.freight{
  display: flex;
  height: 80rpx;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
}
.bottom{
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
  height: 80rpx;
  position: fixed;
  background: #FFFFFF;
  font-size: 15px;
  bottom: 0;
}
.total{
  padding-left: 30rpx;
}
.submit{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  text-align: center;
  background: #1A191E;
}