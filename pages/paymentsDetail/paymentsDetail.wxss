page{
	background:#FFFFFF;
}
.tab-bar{
  display: flex;
  justify-content: space-around;
  height: 120rpx;
  align-items: center;
  background: #FFFFFF;
  border-bottom: 1px solid #E2E2E2;
  font-family: 'MicrosoftYaHei';
  font-size: 15px;
  color: #666666;
}
.item-tab{
  height: 100rpx;
  line-height: 100rpx;
}
.active{
  border-bottom: 2px solid #D74A42;
  color: #D74A42;
}
.center-content{
  height: 100%;
}
.item-box{
  /* font-family: 'MicrosoftYaHei'; */
  font-size: 12px;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #E2E2E2;    
}
.item-public{
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
  align-items: center;
}
.bold{
  font-size: 15px;
  color: #333333;
}
.order-no{
  width: 500rpx;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
}
.green{
  color: #999999;
}
.red{
  color: #D74A42;
}
.time{
  color: #999999;
}