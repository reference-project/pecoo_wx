.dqld_div{
	width:100%;
	background-color:#fff;
	top:0;
	font-size: 14px;
	position: absolute;
	z-index: 50;
}

.dqld_div ul{
	width:100%;
}

.dqld_div ul li{
	height:35px;
	line-height:35px;
	border-bottom:1px solid #cccccc;
	padding-left:10px;
}