page{
  background: #FFFFFF;
}
.none{
  display: none;
}
/* 头部 */
.meetingplace{
  width: 100%;
  height: 500rpx;
  background: #ffffff;
  margin-top: 20rpx;
}
.pic-box{
  margin-top: 20rpx;
  padding: 0 30rpx;  
}
.item-pic{
  width: 100%;
  height: 240rpx;
  margin: 30rpx 0; 
}
.item-name{
  padding: 0 30rpx 20rpx;
  font-family: 'PingFang-SC-Medium';
  color: #333333;
  width: 80%;
}
.start-time{
  background: url(https://static.pecoo.com/images/common/time.png) no-repeat 30rpx 0;
  background-size: 30rpx;
}
.address{
  background: url(https://static.pecoo.com/images/common/address.png) no-repeat 30rpx 0;
  background-size: 30rpx;
}
.public{
  padding: 0 30rpx 10rpx 70rpx;
  color: #666666;
  font-size: 12px;
}
.collection{
  width: 47rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 340rpx;
}
/* 会场内容 */
.all-auction-house{
  width: 100%;
  background: white;
  display: flex;
}
.all-auction-house>view{
  width: 50%;
}
.left-list{
  margin: 20rpx 10rpx 10rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0 1px 5px #DDDDDD;
  border-radius: 10px;
}
.right-list{
  margin: 20rpx 30rpx 10rpx 10rpx;
  background: #FFFFFF;
  box-shadow: 0 1px 5px #DDDDDD;
  border-radius: 10px;
}
.list-cont{
  box-shadow: 0 1px 5px #DDDDDD;
  border-radius: 10px;
  background: white;
}
.list-pic{
  padding: 10rpx;
}
.list-pic>image{
  max-width: 100%;
}
.auction-name{
  padding: 10rpx 20rpx 0;
  font-family: 'PingFang-SC-Medium';
  color: #333333;
  font-size: 14px;
}
.start-time-str{
  padding: 10rpx 20rpx 0;
  color: #666666;
  font-size: 11px;
  font-family: 'PingFang-SC-Regular';
}
.start-price{
  padding: 10rpx 20rpx;
  font-family: 'PingFang SC';
  font-size: 18px;
  color: #333333;
}