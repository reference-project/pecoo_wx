page{
  background: #f3f3f3;
}
.recharge{
  display: -webkit-box;
  background: #ffffff;
}
.recharge view{
	-webkit-box-flex: 1;
	font-size: 14px;
	text-align: center;
	height: 44px;
	line-height: 44px;
	margin: 0 30px;
}
.recharge view.active{
	color: #24988B;
	border-bottom: 3px solid #24988B;
}
.addCard{
  background: #F3F3F3;
  margin-top: 20px;
}
.addCardP1{
	font-size: 14px;
	color: #545454;
	line-height: 30PX;
}
.addCardP2{
	height: 35px;
	padding: 5px;
	line-height: 35px;
	font-size: 14px;
  background: #ffffff;
  display: -webkit-box;
  margin-bottom: 10px;
}
.addCardP2 span{
  display: block;
  width: 50px;
}
.addCardP2 input{
	font-size: 14px;
  display: block;
  -webkit-box-flex: 1;
  line-height: 35px;
  height: 35px;
}
.addCardP3{
	color: #999;
	line-height: 30px;
	padding-bottom: 10px;
}