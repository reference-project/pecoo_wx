/* pages/extravagancesOrderDetail/extravagancesOrderDetail.wxss */
page{
  width: 100%;
  background: #F3F3F3;
}
.address-box{
  display: flex;
  height: 130rpx;
  position: relative;
  background: #FFFFFF;
  border-top: 1rpx solid #E2E2E2;
  background-size: 10rpx;
}
.order-bg{
  width: 100%;
  position: absolute;
  top: 130rpx;
  height: 2rpx;
  left: 0;
  background:url(https://www.pecoo.com/pecootest/images/common/order_bg.png) repeat left bottom;
  background-size: 100%;  
}
.address-pic{
  width: 18px;
  height: 16px;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.address-cont{
  margin: 0 30rpx;
  font-size: 15px;
  padding-top: 15rpx;
}
/* 订单商品 */
.order-content{
  width: 100%;
  margin: 20rpx 0 126rpx;
  background:#F3F3F3;
}
.order-num{
  padding: 0 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  background: #FFFFFF;
}
.order-pro{
  width: 100%;
  min-height: 160rpx;
  border-top: 1px solid #E9E9E9;
  background: #FAFAFA;
  display: flex;
  align-items: center;
  font-size: 14px;
  padding: 20rpx 0;
  color: #999999;
  font-family: 'HiraginoSansGB-W3';
}
.pro-pic-box{
  width: 180rpx;
  height: 180rpx;
  margin-left: 30rpx;  
  border: 1px solid #CCCCCC;
}
.pro-pic-box image{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.pro-detail{
  flex: 1;
  padding: 0 30rpx;
}
.pro-name{
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #333333;
  font-size: 15px;
  padding: 10rpx 0;
}
.pro-detail>view{
  font-size: 14px;
}
.total-price{
  height: 100rpx;
  background: #FFFFFF;
  line-height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #E2E2E2;
}
.loans-price{
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 90rpx;
  background: #FFFFFF;
  display: flex;
  font-size: 14px;
  justify-content: space-between;
}
.price-detail{
  height: 275rpx;
  background: #FAFAFA;
  font-size: 14px;
  color: #999999;
  padding: 30rpx 30rpx 0;
  line-height: 2;
}
.price-detail view{
  display: flex;
  justify-content: space-between;
}
.express-detail{
  height: 140rpx;
  background: #FAFAFA;
  font-size: 14px;
  color: #999999;
  padding: 30rpx 30rpx 0;
  line-height: 2;
  margin-bottom: 30rpx;
}
.express-detail view{
  display: flex;
  justify-content: space-between;
}
/* 底部 */
.detail-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #FFFFFF;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-shadow:5px 5px 12px 0px rgba(180,180,180,0.8);
}
.services{
  width: 210rpx;
  height: 76rpx;
  background: #1A191E;
  text-align: center;
  line-height: 76rpx;
  color: #FFFFFF;
  font-size: 15px;
  border-radius: 10px;
  margin-right: 20rpx;
}
.look{
  width: 210rpx;
  height: 76rpx;
  border: 1rpx solid #E2E2E2;
  text-align: center;
  line-height: 76rpx;
  color: #999999;
  font-size: 15px;
  border-radius: 10px;
  margin-right: 20rpx;
}