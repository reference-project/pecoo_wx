.item-gold{
  height: 340rpx;
  font-size: 13px;
  margin-bottom: 20rpx;
}
.theme-col{
  color: #D74A42;
}
.item-order-no{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  background: #FFFFFF;
  line-height: 80rpx;
  padding: 0 30rpx;
}
.item-order-content{
  height: 180rpx;
  display: flex;
  background: #FAFAFA;
  align-items: center;
  padding: 0 30rpx;
}
.product-img{
  height: 140rpx;
  background: #FFFFFF;
  width: 140rpx;
}
.product-img image{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.item-goodsname{
  flex: 1;
  padding-left: 20rpx;
  font-size: 15px;
  color: #333333;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.item-gold-money{
  background: #FFFFFF;
  height: 80rpx;
  padding: 0 30rpx;
  display: flex;
  font-size: 12px;
  align-items: center;
  justify-content: space-between;
}
.btn{
  display:inline-block;
  width:180rpx;
  height:60rpx;
  font-family:'MicrosoftYaHei';
  font-size:13px;
  border-radius:30px;
  text-align:center;
  line-height:60rpx;
  border: 1rpx solid transparent;
}
.btn1{
  border-color: #CCCCCC;
  color: #666666;
  margin-right: 20rpx;
}
.btn2{
  border-color: #D74A42;
  color: #D74A42;
}