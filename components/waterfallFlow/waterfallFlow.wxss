.fall-container {
  width: 100%;
  height: auto;
  color: #333333;
  display: flex;
}
.fall-left {
  width: 50%;
  display: flex;
  height: 100%;
  flex-direction: column;
}
.item-box{
  background: #FFFFFF;
  box-shadow: 0 1px 5px #DDDDDD;
  border-radius: 6px;
}
.fall-right {
  width: 50%;
  display: flex;
  flex-direction: column;
}
.warp{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-content{
  padding: 20rpx;
}
.goods-name{
  font-family: 'Arial';
  font-size: 14px;
}
.start-time{
  color: #666666;
  font-family: 'PingFang-SC-Regular';
  font-size: 11px;
  padding-top: 10rpx;
}
.goods-price{
  font-size: 12px;
  padding-top: 15rpx;
  font-family: 'PingFang SC';
}
image{
  width: 100%;
  height: 1;
}