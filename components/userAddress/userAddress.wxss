/* 地址信息 */
.user-address{
  /* width: 100%; */
  height: 160rpx;
  background: #FFFFFF;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address-pic{
  width: 37rpx;
  height: 44rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  float: left;
}
.address{
  overflow: hidden;  
  white-space: nowrap;
  text-overflow: ellipsis;
}
.user-info{
  float: left;
  min-width: 75%;
  max-width: 80%;
}
.arrow-pic{
  float: right;
  width: 8px;
  height: 30rpx;
  margin-right: 30rpx;
}