.love-list{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.item-list{
  width: 48%;
  float: left;
}
.left{
  padding-left: 2%;
}
.right{
  padding-right: 2%;
}
.image-box{
  width: 334rpx;
  height: 334rpx;
  margin: 0 auto;
  /* background:#F5F5F5; */
}
.image-box image{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.name, .price{
  width: 334rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 2%;
  font-family: 'PingFang-SC-Medium';
}
.name{
  color: #333333;
  font-size: 14px;
  margin-top: 8rpx;
}
.price{
  margin: 20rpx 0;
  color: #333333;
}

